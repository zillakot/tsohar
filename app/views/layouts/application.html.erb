<!DOCTYPE html>
<html>
<head>
  <title>Tsohar</title>
  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>
<body>

<section id="page">
	<header id="header">
		<nav>
			<%= link_to 'Projects', projects_path %>
			<%= if_app_admin do %><%= link_to 'Users', users_path %><% end %>
		</nav>
		<div id="login">
			<% if session[:user_id] %>
				<p>You're logged in as <%= link_to find_user.username, find_user %> <%= link_to 'Log out', logout_path %></p>
			<% else %>
				<p><%= link_to 'Log in', login_path %> or <%= link_to 'create a new user account', new_user_path %></p>
			<% end %>
		</div>
	</header>

	<section id="content">
		<p id="notice"><%= notice %></p>
		<%= yield %>
	</section>
</section>

</body>
</html>
